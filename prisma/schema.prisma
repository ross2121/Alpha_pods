generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User{
   id          String      @id @unique @default(uuid())
  telegram_id String       @unique
  public_key  String
  role          Role
  encrypted_private_key String
  encryption_iv String
}
model Escrow{
  id    String @id @unique @default(uuid())
  public_key String
  encrypted_private_key String
  encryption_iv  String
}
enum Role{
  admin
  user
}
