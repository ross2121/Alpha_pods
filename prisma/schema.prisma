generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User{
   id          String      @id @unique @default(uuid())
  telegram_id String       @unique
  name       String
  public_key  String
  role          Role
  encrypted_private_key String
  encryption_iv String
}
model Proposal{
  id String @id @unique @default(uuid())
   mint  String
    amount Float
    yes  Int
    no  Int
    messagId BigInt
    chatId BigInt
    createdAt  BigInt
    requestId  String?
    Txn      String?
    mintb    String?
    Votestatus  Status
    ProposalStatus Status
    Members   String[]
      @@unique([chatId, messagId])
}
enum Status{
  Expired
  Running
}
model Escrow{
  id    String @id @unique @default(uuid())
escrow_pda  String   @unique
chatId    BigInt   @unique
seed      String
creator_pubkey String
}
enum Role{
  admin
  user
}
